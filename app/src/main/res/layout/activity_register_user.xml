<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".framework.views.RegisterUserActivity"
    style="@style/backgroundBase"
    >

    <ImageView
        android:id="@+id/logoImg"
        app:layout_constraintVertical_bias="0.05"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/test_logo"
        />

    <TextView
        app:layout_constraintVertical_bias="0.1"
        android:id="@+id/nameLabel"
        android:layout_width="350dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/logoImg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/dark_jungle_green"
        android:text="Nombre"
        android:fontFamily="sans-serif"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nameLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:backgroundTint="@color/black"
        android:hint="Escribe tu nombre"
        android:textColorHint="#C2C2C2"
        android:textColor="@color/dark_jungle_green"
        />

    <TextView
        app:layout_constraintVertical_bias="0.05"
        android:id="@+id/lastNameLabel"
        android:layout_width="350dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/dark_jungle_green"
        android:text="Apellido"
        android:fontFamily="sans-serif"
        />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lastNameLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"
        app:layout_constraintVertical_bias="0"
        android:textColor="@color/dark_jungle_green"
        android:hint="Escribe tu Apellido"
        android:textColorHint="#C2C2C2"
        />
    <TextView
        app:layout_constraintVertical_bias="0.05"
        android:id="@+id/emailLabel"
        android:layout_width="350dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/lastName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/dark_jungle_green"
        android:text="Correo electrónico"
        android:fontFamily="sans-serif"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emailLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/black"
        app:layout_constraintVertical_bias="0"
        android:hint="Escribe tu correo electrónico"
        android:textColorHint="#C2C2C2"
        android:textColor="@color/dark_jungle_green"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Registrarse"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_sea_green"
        app:layout_constraintVertical_bias="0.12"
        />






</androidx.constraintlayout.widget.ConstraintLayout>